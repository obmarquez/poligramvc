@section scripts
{
    <script language="javascript">

        function direccion() {

            var ttype = @HttpContext.Current.Session["Id_RolPol"];

            //alert(ttype);
            if (ttype == '20') {
                location.href = '@Url.Action("IndexPoligrafista", "Evaluacion")';
            }
            else {
                location.href = '@Url.Action("IndexSupervisor", "Evaluacion")';
            }
        }

    </script>
}