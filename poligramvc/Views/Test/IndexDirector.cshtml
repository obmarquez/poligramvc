
@{
    ViewBag.Title = "IndexDirector";
}

@using (Html.BeginForm("IndexDirector", "Test", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Concentrado de las evaluaciones de desempeño
        </div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-4">
                    <div id="data_1">
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" id="fecha01" name="fecha01" class="form-control" placeholder="Fecha Inicio">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="data_1">
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" id="fecha02" name="fecha02" class="form-control" placeholder="Fecha Final">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="wrapper wrapper-content">

    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-6">

            <div class="ibox float-e-margins">

                <div class="ibox-title">

                    <h5>Evaluacion al Poligrafista <small> 2020 </small></h5>

                </div>

                <div class="ibox-content">

                    <div class="row">

                        <table class="table table-striped table-bordered table-hover">

                            <thead>

                                <th>No Eval</th>

                                <th>Supervisor</th>

                                <th>Poligrafista</th>

                                <th>Fecha Hora</th>

                                <th>Imprimir</th>

                            </thead>

                            <tbody>

                                @foreach(var poligra in ViewData["poligrafista"] as IEnumerable<poligramvc.Models.Test>)
                                {
                                    <tr>

                                        <td>@poligra.id</td>

                                        <td>@poligra.usuario</td>

                                        <td>@poligra.evaluado</td>

                                        <td>@poligra.fecha</td>

                                        <td style="vertical-align:middle"><a class="popup btn btn-block btn-outline btn-primary btn-xs" href="../Impresiones/printTestPoligrafista?id=@poligra.id&opcion=1"  target="_blank"><i class="fa fa-print"></i></a></td>

                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

        <div class="col-lg-6 col-md-6 col-sm-6">

            <div class="ibox float-e-margins">

                <div class="ibox-title">

                    <h5>Evaluacion al Supervisor <small> 2020 </small></h5>

                </div>

                <div class="ibox-content">

                    <div>

                        <div class="row">

                            <table class="table table-striped table-bordered table-hover">

                                <thead>

                                <th>No Eval</th>

                                <th>Supervisor</th>

                                <th>Poligrafista</th>

                                <th>Fecha Hora</th>

                                <th>Imprimir</th>

                                </thead>

                                <tbody>

                                    @foreach (var supervisa in ViewData["supervisor"] as IEnumerable<poligramvc.Models.Test>)
                                    {
                                        <tr>

                                            <td>@supervisa.id</td>

                                            <td>@supervisa.usuario</td>

                                            <td>@supervisa.evaluado</td>

                                            <td>@supervisa.fecha</td>

                                            <td style="vertical-align:middle"><a class="popup btn btn-block btn-outline btn-primary btn-xs" href="../Impresiones/printTestSupervisor?id=@supervisa.id&opcion=2" target="_blank"><i class="fa fa-print"></i></a></td>

                                        </tr>
                                    }

                                </tbody>

                            </table>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

@section scripts
{
    @*-- css --*@
    <link href="~/Content/css/plugins/datapicker/datepicker3.css" rel="stylesheet" />

    @*-- js --*@
    <script src="~/Content/js/plugins/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/js/plugins/iCheck/icheck.min.js"></script>

    <script type="text/javascript">

        //----------------------------------------------------------
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });

        $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true,
            format: "dd/mm/yyyy"
        });
        //----------------------------------------------------------

    </script>
}